<% user_page ||= false %>

<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: "post" do %>
        <i class="icon-arrow-up"></i>
      <% end %>
    <% end %>
    <p><%= comment.vote_total == -1 ? "-1 Vote" : pluralize(comment.vote_total, "Vote") %></p>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: "post" do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>  
  </div>

  <div class='span8 well'>
    <p>
      <em><%= comment.body %></em>
    </p>
    <p>
      <% if user_page %>
       <span class='quiet'>on </span><%= link_to comment.post.title, post_path(comment.post) %>
      <% else %>
        <span class='quiet'>by </span><%= link_to comment.user.username, user_path(comment.user) %>
      <% end %>
      <small>at <%= comment.created_at %></small>
    </p>
  </div>
</div>