<%=  render 'shared/error', obj: @post %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>
  <div class="control-group">
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |checkbox| %>
      <% checkbox.label(class: "checkbox inline") {checkbox.check_box(class: "checkbox") + checkbox.text} %>
    <% end %>
  </div>
  <%= f.submit (@post.new_record? ? "Create Post" : "Update Post"), class: 'btn btn-primary' %>
<% end %>