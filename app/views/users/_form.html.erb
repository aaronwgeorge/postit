<div class="row">
  <div class="span8 well">
    <%= render 'shared/error', obj: @user %>
    <%= form_for @user do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>
      <br/>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <br/>
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
      <br/>
      <%= f.submit (@user.new_record? ? "Register" : "Save Profile"), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>